<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPanel" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <top>
        <MenuBar>
            <menus>
                <Menu text="Employee">
                    <!--<items>-->
                        <!--<MenuItem text="Add" onAction="#showAddContactDialog"/>-->
                    <!--</items>-->
                    <!--<items>-->
                        <!--<MenuItem text="Edit" onAction="#showEditContactDialog"/>-->
                    <!--</items>-->
                    <!--<items>-->
                        <!--<MenuItem text="Delete" onAction="#deleteContact"/>-->
                    <!--</items>-->
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <left>
        <VBox >
            <children>
                <TableView fx:id="employeeTable">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn maxWidth="70" minWidth="70" text="ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="id" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Employee name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <VBox >
                    <children>
                        <TableView fx:id="salesTable">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                            <columns>
                                <TableColumn maxWidth="70" minWidth="70" text="Date">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="date" />
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn text="Description">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="description" />
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>
    <center>
        <VBox style="-fx-background-color: white">
            <TextArea fx:id="itemDetailsTextArea" VBox.vgrow="ALWAYS" />
            <HBox>
                <Label style="-fx-background-color: white" text="Date achieved: " visible="false">
                    <font>
                        <!--<Font description="Times New Roman bold" size="20" />-->
                    </font>
                </Label>
                <Label fx:id="deadlineLabel" style="-fx-background-color: white">
                    <font>
                        <!--<Font description="Times New Roman bold" size="20" />-->
                    </font>
                </Label>
            </HBox>
            <HBox>
                <children>
                    <ProgressBar fx:id="progressBar" prefWidth="300.0" progress="0.0" visible="false">
                        <HBox.margin>
                            <Insets left="35.0" />
                        </HBox.margin>
                    </ProgressBar>
                </children>
            </HBox>
        </VBox>
    </center>
    <right>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="170.00" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <!--<Button maxWidth="Infinity" mnemonicParsing="false" onAction="#listEmployees" text="List Employees" />-->
                <Button maxWidth="Infinity" mnemonicParsing="false" text="Add sale to employee" />
                <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#listSalesForEmployees" text="Show Sales of employee" />
            </children>
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
        </VBox>
    </right>

</BorderPane>
